# Database
DATABASE_URL="postgresql://user:password@localhost:5432/codeforce"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Redis (for rate limiting)
# Option 1: Use connection string
REDIS_URL="redis://:password@localhost:6379"

# Option 2: Use individual parameters
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_password
# REDIS_DB=0

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PLATFORM_FEE_RATE="0.15"
STRIPE_TRUST_SUPPORT_FEE_RATE="0.15"

# Pusher (for real-time features)
PUSHER_APP_ID="your_app_id"
PUSHER_KEY="your_key"
PUSHER_SECRET="your_secret"
PUSHER_CLUSTER="us2"

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID="your_account_sid"
TWILIO_AUTH_TOKEN="your_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email (SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your_email@example.com"
SMTP_PASSWORD="your_password"
SMTP_FROM="noreply@codeforce.com"

# File Upload (local storage for MVP)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760" # 10MB in bytes

# Google Maps (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"

# Environment
NODE_ENV="development"


