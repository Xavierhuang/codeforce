generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Seed script configuration
// Run with: npm run db:seed

model User {
  id                 String     @id @default(cuid())
  name               String?
  email              String     @unique
  phone              String?
  slug               String?    @unique // Unique URL-friendly identifier for public profile
  role               Role       @default(CLIENT)
  bio                String?
  avatarUrl          String?
  avatarCropX        Float?     // Avatar crop/position X offset (0-1)
  avatarCropY        Float?     // Avatar crop/position Y offset (0-1)
  avatarCropScale    Float?     // Avatar crop scale (1 = no zoom, >1 = zoomed in)
  bannerUrl          String?
  badgeTier          BadgeTier?  @default(STARTER)
  hashedPassword     String?
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  rating             Float      @default(0)
  ratingCount        Int        @default(0)
  stripeAccountId    String?
  walletBalance      Float      @default(0) // Worker's earnings wallet balance
  hourlyRate         Float?     // Worker's hourly rate for direct bookings
  serviceType        ServiceType? // VIRTUAL, IN_PERSON, or BOTH (for workers)
  locationLat        Float?
  locationLng        Float?
  serviceRadiusMiles Int?       // for in-person workers
  availability       Json?      // weekly schedule/time slots
  workerServices     Json?      // Array of worker services with pricing (skillName, hourlyRate, description, isActive)
  workExperience     Json?      // Array of work experience entries: [{company, position, startDate, endDate, description, isCurrent}]
  gender             String?
  birthdate          DateTime?
  schedulingUrl      String?
  twitterUrl         String?
  instagramUrl       String?
  referralSource     String?
  verificationStatus VerificationStatus @default(PENDING)
  // Professional links (public - shown on profiles)
  website            String?    // Personal/professional website
  linkedinUrl        String?    // LinkedIn profile URL
  githubUrl          String?    // GitHub profile URL
  // Professional information (public - shown on profiles)
  yearsOfExperience  Int?       // Years of professional experience
  education          String?    // Education background
  languages          String?    // Languages spoken
  certifications     String?    // Professional certifications
  // Buyer-specific information (public - shown on buyer profiles)
  company            String?    // Company name
  companySize        String?    // e.g., "1-10", "11-50", "51-200", "201-500", "500+"
  industry           String?    // e.g., "Technology", "Healthcare", "Finance", "E-commerce"
  projectTypes       String?    // Comma-separated list of project types they typically work on
  budgetRange        String?    // e.g., "$1,000-$5,000", "$5,000-$25,000", "$25,000+"
  preferredCommunication String? // e.g., "Email", "Phone", "Video Call", "In-Person"
  typicalProjectDuration String? // e.g., "1-2 weeks", "1-3 months", "3-6 months", "6+ months"
  idDocumentUrl      String?    // URL to uploaded ID document (passport/driver's license)
  idDocumentType     String?    // e.g., "passport", "drivers_license", "national_id"
  idDocumentUploadedAt DateTime? // When ID was uploaded
  suspendedUntil     DateTime?  // Account suspension expiration date
  suspensionReason   String?    // Reason for account suspension
  skills             UserSkill[]
  reviewsReceived    Review[]   @relation("reviewsReceived")
  reviewsGiven       Review[]   @relation("reviewsGiven")
  tasksPosted        Task[]     @relation("clientTasks")
  tasksAssigned      Task[]     @relation("workerTasks")
  offers             Offer[]
  messages           Message[]
  receivedMessages   Message[]  @relation("receivedMessages")
  payouts            Payout[]
  payoutRequests     PayoutRequest[]
  notifications      Notification[]
  supportTickets     SupportTicket[]
  supportMessages    SupportMessage[]
  assignedTickets    SupportTicket[] @relation("assignedTickets") // Tickets assigned to this admin
  blogPosts          BlogPost[]       @relation("BlogPosts") // Blog posts authored by this user
  buyerTransactions  Transaction[]    @relation("buyerTransactions")
  workerTransactions Transaction[]    @relation("workerTransactions")
  timeReports        TimeReport[] // Time reports submitted by worker
}

model UserSkill {
  id      String @id @default(cuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill   String
  level   String // e.g., junior/mid/senior
  createdAt DateTime @default(now())
}

model Task {
  id                 String     @id @default(cuid())
  title              String
  description        String
  clientId           String
  client             User       @relation("clientTasks", fields: [clientId], references: [id])
  workerId           String? 
  worker             User?      @relation("workerTasks", fields: [workerId], references: [id])
  offerId            String?    @unique // Linked offer when task is auto-created from purchase
  offer              Offer?      @relation("taskOffer", fields: [offerId], references: [id])
  category           String
  subcategory        String?
  type               ServiceType @default(VIRTUAL) // VIRTUAL or IN_PERSON
  status             TaskStatus @default(OPEN)
  price              Float?     // If client sets budget or developer fixed quote
  estimatedDurationMins Int?
  minBillableMins    Int?       // from worker profile when assigned
  scheduledAt        DateTime?
  address            String?    // for in-person
  addressLat         Float?
  addressLng         Float?
  travelFee          Float?
  offers             Offer[]     @relation("taskOffers")
  messages           Message[]
  attachments        Attachment[]
  notifications      Notification[]
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  completedAt        DateTime?
  disputeId          String?
  paymentIntentId    String?    // Stripe PaymentIntent ID
  stripeChargeId     String?    // Stripe Charge ID
  transactions       Transaction[] // Transactions for this task
  // Time tracking
  clockInTime        DateTime?  // When worker clocked in
  clockOutTime       DateTime?  // When worker clocked out
  totalTimeMinutes   Int?       // Total tracked time in minutes
  // Weekly reporting (for hourly work)
  weeklyHourLimit    Int?       // Optional weekly hour limit (in hours)
  estimatedTotalHours Int?      // Estimated total hours for project (minimum 8 for hourly)
  timeReports        TimeReport[] // Weekly time reports
  weeklyPayments     WeeklyPayment[] // Weekly payment records
}

model Offer {
  id         String   @id @default(cuid())
  taskId     String
  task       Task     @relation("taskOffers", fields: [taskId], references: [id], onDelete: Cascade)
  taskFromOffer Task? @relation("taskOffer") // Reverse relation for task created from offer
  workerId   String
  worker     User     @relation(fields: [workerId], references: [id])
  price      Float
  hourly     Boolean  @default(false)
  message    String?
  estimatedDurationMins Int?
  createdAt  DateTime @default(now())
  status     OfferStatus @default(PENDING) // PENDING, ACCEPTED, DECLINED, WITHDRAWN
}

model Message {
  id             String   @id @default(cuid())
  taskId         String
  task           Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  senderId       String
  sender         User     @relation(fields: [senderId], references: [id])
  receiverId     String?  // Explicit receiver for chat messages
  receiver       User?    @relation("receivedMessages", fields: [receiverId], references: [id])
  content        String
  attachmentUrl  String?  // File link if attached (legacy support)
  attachments    Attachment[]
  createdAt      DateTime @default(now())
  readAt         DateTime?
}

model Attachment {
  id        String @id @default(cuid())
  url       String
  filename  String
  mimeType  String
  uploadedBy String
  createdAt DateTime @default(now())
  taskId    String? 
  task      Task?  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  messageId String?
  message   Message? @relation(fields: [messageId], references: [id], onDelete: Cascade)
  timeReportId String? // Link to time report if attached to weekly report
  timeReport TimeReport? @relation(fields: [timeReportId], references: [id], onDelete: Cascade)
}

model Review {
  id           String  @id @default(cuid())
  reviewerId   String
  reviewer     User    @relation("reviewsGiven", fields: [reviewerId], references: [id])
  targetUserId String
  targetUser   User    @relation("reviewsReceived", fields: [targetUserId], references: [id])
  rating       Int
  comment      String?
  taskId       String?
  isMidProjectReview Boolean @default(false) // True if review during IN_PROGRESS task
  weeksWorked  Int?    // Number of weeks worked when review was submitted
  totalHoursWorked Float? // Total hours worked when review was submitted
  createdAt    DateTime @default(now())
}

model TimeReport {
  id                String   @id @default(cuid())
  taskId            String
  task              Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  workerId          String
  worker            User     @relation(fields: [workerId], references: [id])
  weekStartDate     DateTime // Monday of the week (UTC)
  weekEndDate       DateTime // Sunday 23:59 UTC of the week
  hoursWorked       Float    // Hours worked (can include minutes as decimals, e.g., 2.5 = 2h 30m)
  briefDescription  String   // Brief description of work completed
  detailedDescription String? // Detailed description
  attachments       Attachment[] // Files attached to time report
  status            TimeReportStatus @default(PENDING) // PENDING, APPROVED, DISPUTED, REJECTED
  submittedAt       DateTime @default(now())
  approvedAt        DateTime?
  approvedBy        String?  // Buyer ID who approved
  paymentProcessed  Boolean  @default(false)
  paymentProcessedAt DateTime?
  weeklyPayment     WeeklyPayment? // Link to weekly payment record
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([taskId, weekStartDate]) // One report per task per week
  @@index([taskId])
  @@index([workerId])
  @@index([weekStartDate])
  @@index([status])
}

model WeeklyPayment {
  id                String   @id @default(cuid())
  taskId            String
  task              Task     @relation(fields: [taskId], references: [id])
  timeReportId      String   @unique
  timeReport        TimeReport @relation(fields: [timeReportId], references: [id])
  weekStartDate     DateTime
  weekEndDate       DateTime
  hoursWorked       Float
  hourlyRate        Float
  baseAmount        Float    // hoursWorked * hourlyRate
  platformFee       Float
  stripeFee         Float
  totalAmount        Float    // Amount charged to buyer
  workerPayout      Float    // Amount paid to worker
  paymentIntentId   String?  // Stripe PaymentIntent ID
  transactionId     String?  // Link to Transaction record
  transaction       Transaction? @relation(fields: [transactionId], references: [id])
  status            WeeklyPaymentStatus @default(PENDING)
  processedAt       DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([taskId])
  @@index([weekStartDate])
  @@index([status])
}

model Payout {
  id            String  @id @default(cuid())
  workerId      String
  worker        User    @relation(fields: [workerId], references: [id])
  amount        Float
  fee           Float
  stripePayoutId String?
  payoutRequestId String? // Link to payout request if processed manually
  payoutRequest PayoutRequest? @relation(fields: [payoutRequestId], references: [id])
  createdAt     DateTime @default(now())
  taskId        String?
}

model PayoutRequest {
  id            String   @id @default(cuid())
  workerId     String
  worker       User     @relation(fields: [workerId], references: [id])
  amount       Float
  status       PayoutRequestStatus @default(PENDING)
  notes        String?  // Optional notes from worker
  adminNotes   String?  // Admin notes when approving/rejecting
  processedAt  DateTime?
  processedBy  String?   // Admin user ID who processed it
  stripePayoutId String? // Stripe transfer ID if processed
  payouts      Payout[] // Payouts created from this request
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([workerId])
  @@index([status])
}

model WebhookEvent {
  id            String   @id @default(cuid())
  stripeEventId String   @unique
  type          String
  processed     Boolean  @default(false)
  processedAt   DateTime?
  error         String?
  retryCount    Int      @default(0)
  data          Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([stripeEventId])
  @@index([processed])
  @@index([type])
}

model Transaction {
  id                String   @id @default(cuid())
  paymentIntentId   String   @unique
  stripeChargeId    String?
  buyerId           String
  buyer             User     @relation("buyerTransactions", fields: [buyerId], references: [id])
  workerId          String?
  worker            User?    @relation("workerTransactions", fields: [workerId], references: [id])
  taskId            String?
  task              Task?    @relation(fields: [taskId], references: [id])
  amount            Float    // Total amount paid by buyer
  baseAmount        Float    // Base task amount (before fees)
  platformFee       Float    // Platform fee (15%)
  stripeFee         Float    // Stripe processing fee
  workerPayout      Float?   // Amount worker receives (set when task completed)
  status            TransactionStatus @default(PENDING) // PENDING, AUTHORIZED, CAPTURED, FAILED, REFUNDED
  captureMethod     String   // 'automatic' or 'manual'
  metadata          Json?    // Additional metadata
  receiptSent       Boolean  @default(false)
  receiptSentAt     DateTime?
  paymentLogs       PaymentLog[] // Payment event logs
  weeklyPayments    WeeklyPayment[] // Weekly payments linked to this transaction
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([buyerId])
  @@index([workerId])
  @@index([taskId])
  @@index([paymentIntentId])
  @@index([status])
  @@index([createdAt])
}

model PaymentLog {
  id                String   @id @default(cuid())
  transactionId     String?
  transaction       Transaction? @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  paymentIntentId   String   // Stripe PaymentIntent ID
  eventType         String   // 'payment_intent_created', 'payment_authorized', 'payment_captured', 'payment_failed', 'webhook_received', etc.
  level             PaymentLogLevel @default(INFO) // INFO, WARNING, ERROR, CRITICAL
  message           String
  details           Json?    // Additional details (amounts, status, errors, etc.)
  source            String   // 'client', 'server', 'webhook', 'task_completion'
  createdAt         DateTime @default(now())

  @@index([paymentIntentId])
  @@index([transactionId])
  @@index([eventType])
  @@index([level])
  @@index([createdAt])
}

enum Role {
  CLIENT
  WORKER
  ADMIN
}

enum TaskStatus {
  OPEN
  OFFERED
  ASSIGNED      // Task is assigned to worker (maps to "active" in spec)
  IN_PROGRESS
  COMPLETED
  CANCELLED
  DISPUTED
}

enum OfferStatus {
  PENDING
  ACCEPTED
  DECLINED
  WITHDRAWN
}

enum ServiceType {
  VIRTUAL
  IN_PERSON
  BOTH      // Worker offers both remote and on-site services
}

enum TransactionStatus {
  PENDING     // Payment intent created but not yet authorized
  AUTHORIZED  // Payment authorized (for manual capture)
  CAPTURED    // Payment captured/succeeded
  FAILED      // Payment failed
  REFUNDED    // Payment refunded
}

enum PaymentLogLevel {
  INFO       // Normal operation
  WARNING    // Potential issue
  ERROR      // Error occurred
  CRITICAL   // Critical issue requiring attention
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum BadgeTier {
  STARTER
  VERIFIED
  PROFESSIONAL
  EXPERT
  ELITE
}

model Settings {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String
  description     String?
  updatedBy       String?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
  
  @@index([key])
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String   @db.Text
  authorId    String
  author      User     @relation("BlogPosts", fields: [authorId], references: [id], onDelete: Cascade)
  category    String?  // e.g., "For Buyers", "For Developers", "Platform Updates"
  featuredImageUrl String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([slug])
  @@index([published])
  @@index([category])
  @@index([publishedAt])
}

enum PayoutRequestStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSED
}

enum TimeReportStatus {
  PENDING    // Submitted, awaiting buyer approval
  APPROVED   // Buyer approved, ready for payment
  DISPUTED   // Buyer disputed the hours
  REJECTED   // Buyer rejected the hours
}

enum WeeklyPaymentStatus {
  PENDING      // Time report approved, payment pending
  PROCESSING   // Payment being processed
  COMPLETED    // Payment completed
  FAILED       // Payment failed
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId      String?
  task        Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  type        String   // task_created, message_sent, task_cancelled, offer_purchased
  message     String
  readStatus  Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([readStatus])
  @@index([createdAt])
}

model SupportTicket {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      SupportTicketCategory
  subject       String
  description   String
  status        SupportTicketStatus @default(OPEN)
  priority      SupportTicketPriority @default(MEDIUM)
  assignedTo    String?  // Admin user ID who is handling this ticket
  assignedAdmin User?    @relation("assignedTickets", fields: [assignedTo], references: [id])
  resolvedAt    DateTime?
  closedAt      DateTime?
  messages      SupportMessage[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([category])
  @@index([priority])
  @@index([assignedTo])
  @@index([createdAt])
}

model SupportMessage {
  id          String   @id @default(cuid())
  ticketId    String
  ticket      SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message     String
  isAdmin     Boolean  @default(false) // True if message is from admin
  attachments Json?    // Array of attachment URLs/objects
  createdAt   DateTime @default(now())

  @@index([ticketId])
  @@index([userId])
  @@index([createdAt])
}

enum SupportTicketCategory {
  GENERAL_SUPPORT
  TECHNICAL_ISSUE
  ACCOUNT_ISSUE
  REPORT_USER
  REPORT_TASK
  PAYMENT_ISSUE
  VERIFICATION
  OTHER
}

enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum SupportTicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

